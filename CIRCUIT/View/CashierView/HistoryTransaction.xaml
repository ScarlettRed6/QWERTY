<Window x:Class="CIRCUIT.View.CashierView.HistoryTransaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:CIRCUIT.ViewModel"
        Title="HistoryTransaction" Height="550" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">




<Grid Margin="0,0,20,0">
        <StackPanel Margin="10">

            <!-- Header Section -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock FontSize="24" FontWeight="Bold" Text="TRANSACTION HISTORY" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Date and Staff Information -->
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <!-- Display the date and time -->
                <TextBlock FontSize="15" Margin="0,0,0,0">
                    <TextBlock.Text>
                        <Binding Path="CurrentDateTime" />
                    </TextBlock.Text>
                </TextBlock>

                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="SALES STAFF" FontWeight="Bold" FontSize="12"/>
                    <TextBlock Text="{Binding StaffName}"/>
                </StackPanel>

                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="CASH REGISTER" FontWeight="Bold" FontSize="12"/>
                    <TextBlock Text="{Binding CashRegister}"/>
                </StackPanel>
            </StackPanel>

            <!-- Filter Section -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="YEAR" Margin="5,0"/>
                <TextBox Width="50" Text="2024" IsReadOnly="True"/>
                <TextBlock Text="FROM" Margin="10,0"/>
                <ComboBox Width="80">
                    <ComboBoxItem Content="JANUARY"/>
                    <ComboBoxItem Content="FEBRUARY"/>
                    <ComboBoxItem Content="MARCH"/>
                    <ComboBoxItem Content="APRIL"/>
                    <ComboBoxItem Content="MAY"/>
                    <ComboBoxItem Content="JUNE"/>
                    <ComboBoxItem Content="JULY"/>
                    <ComboBoxItem Content="AUGUST"/>
                    <ComboBoxItem Content="SEPTEMBER"/>
                    <ComboBoxItem Content="OCTOBER"/>
                    <ComboBoxItem Content="NOVEMBER"/>
                    <ComboBoxItem Content="DECEMBER"/>

                </ComboBox>
                <TextBlock Text="TILL" Margin="10,0"/>
                <ComboBox Width="80">
                    <ComboBoxItem Content="JANUARY"/>
                    <ComboBoxItem Content="FEBRUARY"/>
                    <ComboBoxItem Content="MARCH"/>
                    <ComboBoxItem Content="APRIL"/>
                    <ComboBoxItem Content="MAY"/>
                    <ComboBoxItem Content="JUNE"/>
                    <ComboBoxItem Content="JULY"/>
                    <ComboBoxItem Content="AUGUST"/>
                    <ComboBoxItem Content="SEPTEMBER"/>
                    <ComboBoxItem Content="OCTOBER"/>
                    <ComboBoxItem Content="NOVEMBER"/>
                    <ComboBoxItem Content="DECEMBER"/>
                </ComboBox>
            </StackPanel>

            <!-- Transaction List -->
            <ListView Name="TransactionListView" Margin="0,10,0,10" Width="1100" Height="280" HorizontalAlignment="Center" FontSize="15">
                <ListView.View>
                    <GridView >
                        <GridViewColumn Header="Order Id" Width="120" DisplayMemberBinding="{Binding OrderId}"/>
                        <GridViewColumn Header="Date" Width="140" DisplayMemberBinding="{Binding Date}"/>
                        <GridViewColumn Header="Product" Width="280" DisplayMemberBinding="{Binding Product}"/>
                        <GridViewColumn Header="Quantity" Width="135" DisplayMemberBinding="{Binding Quantity}"/>
                        <GridViewColumn Header="Price" Width="120" DisplayMemberBinding="{Binding Price}"/>
                        <GridViewColumn Header="Cashier" Width="125" DisplayMemberBinding="{Binding CashierName}"/>
                        <GridViewColumn Header="Time Transaction" Width="180" DisplayMemberBinding="{Binding TimeTransaction}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Total Amount -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,30,10">
                <TextBlock Text="TOTAL" FontWeight="Bold" Margin="0,0,10,0"/>
                <!-- Amount text muna -->
                <TextBlock Text="PHP2,720.00" FontWeight="Bold"/>
            </StackPanel>

            <!-- Pagination Controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <Button Content="BACK" Width="80" Background="#FFDDDD" Margin="0,0,10,0"/>
                <Button Content="&lt;" Width="30" Margin="5,0"/>
                <Button Content="1" Width="30" Margin="5,0"/>
                <Button Content="2" Width="30" Margin="5,0"/>
                <Button Content="3" Width="30" Margin="5,0"/>
                <Button Content="&gt;" Width="30" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
        </Grid>
</Window>
