<Window x:Class="CIRCUIT.View.CashierView.CashierView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CashierView" Height="450" Width="800">

    <Grid>
        <!-- Top Border with Staff and Date/Time -->
        <Border Background="#CAE9F5" Height="50" Width="320" VerticalAlignment="Top" Margin="0,10,0,0" CornerRadius="5">
            <Grid>
                <!-- Column definitions for "STAFF" and Date/Time -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!-- STAFF TextBlock -->
                <TextBlock Text="STAFF" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0" FontWeight="Bold" Grid.Column="0"/>

                <!-- Date and Time TextBlock -->
                <TextBlock x:Name="DateTimeTextBlock" Text="Date" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0" Grid.Column="2" />
            </Grid>
        </Border>

        <!-- Button 1: New Sale -->
        <Button x:Name="newSale" Content="Start New Sale" FontSize="25" Height="150" Margin="80,0,0,0" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center" Click="NewSale_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="White" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1" 
                            CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Button 2: History -->
        <Button x:Name="History" Content="View Transaction History" FontSize="25" Height="150" Margin="0,0,80,0" Width="300" HorizontalAlignment="Right" VerticalAlignment="Center" Click="History_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="White" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
    
    
    
    
    
</Window>
