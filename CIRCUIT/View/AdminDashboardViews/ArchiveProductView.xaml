<UserControl x:Class="CIRCUIT.View.AdminDashboardViews.ArchiveProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:CIRCUIT.View.AdminDashboardViews"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="650" d:DesignWidth="1100">


    <Border CornerRadius="10" 
            Background="{StaticResource panelColor5}">

        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="70*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      Background="{StaticResource panelColor7}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Grid column 0 -->
                    <StackPanel Margin="5">
                        <!-- Archive product title and product name -->
                        <TextBlock Text="Archive Product"
                                   FontSize="35"
                                   FontWeight="Medium"
                                   Margin="10,0,0,10"
                                   Foreground="{StaticResource panelColor4}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ArchiveProductName}"
                                   FontSize="25"
                                   FontWeight="Medium"
                                   Margin="10,0,0,0"
                                   Foreground="{StaticResource panelColor4}"
                                   VerticalAlignment="Center"/>
                        
                        <TextBlock Text="{Binding ArchiveCategory}"
                                   FontSize="20"
                                   Margin="10,0,0,0"
                                   Foreground="{StaticResource panelColor4}"
                                   VerticalAlignment="Center"/>

                    </StackPanel>

                    <!-- Grid column 1-->
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Stock quantity -->
                        <StackPanel Margin="100,20,0,0"
                                    VerticalAlignment="Center">
                            <Label Content="In stock"
                                   FontSize="20"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource panelColor4}"
                                   Margin="0,0,0,10"/>

                            <TextBlock Text="{Binding ArchiveStockQuantity}"
                                       FontSize="20"
                                       FontWeight="Medium"
                                       Margin="35,0,0,0"
                                       PreviewTextInput="NumberValidationTextBox"
                                       Foreground="{StaticResource panelColor4}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Archive and Cancel buttons -->
                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="1"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right">
                            <Button Height="50" Width="100"
                                    Style="{StaticResource addCatalogButton}"
                                    Margin="5"
                                    Command="{Binding ArchiveCancelCommand}">

                                <TextBlock Text="CANCEL" FontSize="15"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource panelColor4}"/>

                            </Button>
                            <Button Height="50" Width="100"
                                    Style="{StaticResource addCatalogButton}"
                                    Margin="5"
                                    Command="{Binding ArchiveProceedCommand}">

                                <TextBlock Text="ARCHIVE" FontSize="15"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource panelColor4}"/>

                            </Button>
                        </StackPanel>
                    </Grid>
                    
                </Grid>
                
                <!-- Grid row 1-->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40*"/>
                        <RowDefinition Height="60*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Margin="10">
                        <Label Background="{StaticResource panelColor3}" 
                               Content="Description" 
                               BorderThickness="0,0,0,3"
                               BorderBrush="{StaticResource panelColor2}"
                               Height="40"
                               FontSize="20"
                               FontWeight="Medium"
                               Foreground="{StaticResource panelColor4}"/>

                        <TextBox x:Name="descriptionBox" Height="120"
                                 FontSize="15"
                                 IsEnabled="False"
                                 Foreground="{StaticResource panelColor4}"
                                 Style="{StaticResource catalogBox}"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" 
                                 HorizontalScrollBarVisibility="Disabled"
                                 Text="{Binding ArchiveDescription, UpdateSourceTrigger=PropertyChanged}"/>
                        
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="5,-10,5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                   BorderBrush="{StaticResource panelColor7}"
                                   BorderThickness="2"
                                   Margin="5">

                            <StackPanel>
                                <Label Background="{StaticResource panelColor3}" 
                                          Content="Identifiers" 
                                          BorderThickness="0,0,0,3"
                                          BorderBrush="{StaticResource panelColor2}"
                                          Height="40"
                                          FontSize="20"
                                          FontWeight="Medium"
                                          Foreground="{StaticResource panelColor4}"/>

                                <Label Content="SKU"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource panelColor4}"
                                       Margin="8,0,0,0"/>

                                <TextBlock Text="{Binding ArchiveSKU}"
                                           Foreground="{StaticResource panelColor4}"
                                           FontSize="20"
                                           Padding="5,0,0,0"
                                           HorizontalAlignment="Left"
                                           Margin="10,0,0,0"
                                           Height="30"
                                           Width="465"
                                           PreviewTextInput="NumberValidationTextBox"
                                           Background="{StaticResource panelColor7}"/>
                                
                                <Label Content="Model"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource panelColor4}"
                                       Margin="8,0,0,0"/>

                                <TextBlock Text="{Binding ArchiveModel}"
                                           Foreground="{StaticResource panelColor4}"
                                           FontSize="20"
                                           Padding="5,0,0,0"
                                           HorizontalAlignment="Left"
                                           Margin="10,0,0,0"
                                           Height="30"
                                           Width="465"
                                           Background="{StaticResource panelColor7}"/>
                                
                                <Label Content="Brand"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource panelColor4}"
                                       Margin="8,0,0,0"/>

                                <TextBlock Text="{Binding ArchiveBrand}"
                                           Foreground="{StaticResource panelColor4}"
                                           FontSize="20"
                                           Padding="5,0,0,0"
                                           HorizontalAlignment="Left"
                                           Margin="10,0,0,0"
                                           Height="30"
                                           Width="465"
                                           Background="{StaticResource panelColor7}"/>

                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1"
                                BorderBrush="{StaticResource panelColor7}"
                                BorderThickness="2"
                                Margin="5">

                            <StackPanel>
                                <Label Background="{StaticResource panelColor3}" 
                                       Content="Prices/Reorder point" 
                                       BorderThickness="0,0,0,3"
                                       BorderBrush="{StaticResource panelColor2}"
                                       Height="40"
                                       FontSize="20"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource panelColor4}"/>
                                <!-- Selling price box -->
                                <Label Content="Selling price"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource panelColor4}"
                                       Margin="8,0,0,0"/>

                                <TextBlock Text="{Binding ArchivePrice}"
                                           Foreground="{StaticResource panelColor4}"
                                           FontSize="20"
                                           Padding="5,0,0,0"
                                           HorizontalAlignment="Left"
                                           Margin="10,0,0,0"
                                           Height="30"
                                           Width="300"
                                           PreviewTextInput="NumberValidationTextBox"
                                           Background="{StaticResource panelColor7}"/>
                                <!-- Unit Cost box -->
                                <Label Content="Unit Cost"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource panelColor4}"
                                       Margin="8,0,0,0"/>

                                <TextBlock Text="{Binding ArchiveUnitCost}"
                                           Foreground="{StaticResource panelColor4}"
                                           FontSize="20"
                                           Padding="5,0,0,0"
                                           HorizontalAlignment="Left"
                                           Margin="10,0,0,0"
                                           Height="30"
                                           Width="300"
                                           PreviewTextInput="NumberValidationTextBox"
                                           Background="{StaticResource panelColor7}"/>
                                
                                <!-- Reorder point box -->
                                <Label Content="Min Reorder point"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource panelColor4}"
                                       Margin="8,0,0,0"/>

                                <TextBlock Text="{Binding ArchiveMinStockLevel}"
                                           Foreground="{StaticResource panelColor4}"
                                           FontSize="20"
                                           Padding="5,0,0,0"
                                           HorizontalAlignment="Left"
                                           Margin="10,0,0,0"
                                           Height="30"
                                           Width="300"
                                           PreviewTextInput="NumberValidationTextBox"
                                           Background="{StaticResource panelColor7}"/>

                            </StackPanel>
                        </Border>
                    </Grid>
                    
                </Grid>
                
                
            </Grid>
            <!-- Content Control for panel switching -->
            <ContentControl Content="{Binding CurrentArchiveView}"/>
        </Grid>
    </Border>
</UserControl>
