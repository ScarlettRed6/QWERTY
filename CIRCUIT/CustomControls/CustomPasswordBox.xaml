<UserControl x:Class="CIRCUIT.CustomControls.CustomPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CIRCUIT.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">


    <PasswordBox x:Name="txtPassword"
                 FontSize="13"
                 FontWeight="Medium"
                 Foreground="White"
                 CaretBrush="LightBlue"
                 BorderBrush="DarkGray"
                 BorderThickness="0,0,0,1"
                 VerticalContentAlignment="Center"
                 Padding="20,0,0,0">

        <!-- Change the icon later -->
        <PasswordBox.Background>
            <ImageBrush ImageSource="/CIRCUIT;component/Assets/Images/Personalpic.jpg"
                        Stretch="None"
                        AlignmentX="Center" Opacity="0.3"/>
        </PasswordBox.Background>

    </PasswordBox>


</UserControl>
